/**app.wxss**/
@import "style/weui.wxss";

.itemInfo{
    margin: 15px;
    padding: 3px 10px;
    display: flex;
    justify-content: space-around;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page__btn{
    padding:20rpx 80rpx;
    height: 40rpx;
}

.page-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}


page {
    background-color: #F8F8F8;
    font-size: 32rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page__hd {
    padding: 80rpx;
    padding-bottom: 80rpx;
    height: 40rpx;
}
.page__bd_spacing {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.page__ft{
    padding-bottom: 20rpx;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 40rpx;
    font-weight: 400;
}

.page__desc {
    margin-top: 10rpx;
    color: #888888;
    text-align: left;
    font-size: 30rpx;
}

/**the styles below were added by Junjun Zhang**/

.placeholder{
    margin: 10rpx;
    padding: 25rpx 20rpx;
    height: 20rem;
    background-color: #eee; 
}

.placeholder2{
    margin: 10rpx;
    padding: 25rpx 20rpx;
    height: 15rem;
    background-color: #eee; 
}


.placeholderIndex{
    margin: 10rpx;
    padding: 25rpx 20rpx;
    height: 2rem;
}

.placebackholder{
   margin: 10rpx;
    padding: 0 20rpx;
    height: 17rem;
    background-color: #eee; 
}

.buttons_layout{
    flex-direction: row;
    justify-content: space-between;
    flex-grow: 1;
}

.targetStyle{
    margin: 5px;
    padding-top: 40rpx;
    padding-bottom: 0;
    display: flex;
    position: relative;
    justify-content: space-around;
    font-size: 120rpx;
}
.targetbackStyle{
   margin: 5px;
    padding-top: 200rpx;
    padding-bottom: 0;
    display: flex;
    position: relative;
    justify-content: space-around;
    font-size: 120rpx;
}
.targetnbackStyle{
   margin: 5px;
    padding-top: 100rpx;
    padding-bottom: 0;
    display: flex;
    position: relative;
    justify-content: space-around;
    font-size: 180rpx;
}
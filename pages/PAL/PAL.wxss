.weui-grids {
  border-top:1rpx solid #d9d9d9;
  border-left:1rpx solid #d9d9d9;
  overflow:hidden
}

.weui-grid {
  position:relative;
  float:left;
  width:33.3333%;
  height:6.666rem;
  box-sizing:border-box;
  border-right:1rpx solid #d9d9d9;
  border-bottom:1rpx solid #d9d9d9
}

.weui-grid__cover {
  display:block;
  width:5rem;
  height:5rem;
  position: absolute;
  left: 0.822rem;
  top:  0.822rem;
}

.weui-grid__text {
  display:block;
  text-align: center;
  font-size: 120rpx;
}

.weui-grid__label {
  margin-top:5px;
  display:block;
  text-align:center;
  color:#000;
  font-size:14px;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden
}
